# Plaid API (server-side only)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Vercel KV (auto-injected on Vercel, needed for local dev)
KV_REST_API_URL=your_vercel_kv_url
KV_REST_API_TOKEN=your_vercel_kv_token

# Encryption (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your_64_char_hex_key

# Plaid Webhook (your deployed URL)
PLAID_WEBHOOK_URL=https://visionfinance.app/api/webhook

# Frontend (VITE_ prefix = exposed to browser)
VITE_DESCOPE_PROJECT_ID=your_descope_project_id
VITE_REWARDSCC_API_KEY=your_rapidapi_key
VITE_REWARDSCC_API_HOST=rewards-credit-card-api.p.rapidapi.com
VITE_REWARDSCC_BASE_URL=https://rewards-credit-card-api.p.rapidapi.com
